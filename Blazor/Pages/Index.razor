@page "/"
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
    <Authorized>
        <table>
            <tr>
                <th>Claim Type</th>
                <th>Value</th>
            </tr>

            @foreach (var item in context.User.Claims)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.Value</td>
                </tr>
            }
        </table>
    </Authorized>
</AuthorizeView>